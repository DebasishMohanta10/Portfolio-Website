<% provide(:title,"Contact Me") %>
<div class="section">
            <div class="center">
                <h2 style="font-weight: 900;" class="deep-purple-text animate__animated animate__fadeInDown">Let's Connect</h2>
                <div class="container animate__animated animate__fadeInRight" style="width: 60%;">
                    <p style=" font-size: 24px;">Let's start a conversation. Tell me a bit about yourself, and I will connect you as soon as I can.</p>
                </div>
            </div>
        </div>


        <div class="section animate__animated animate__fadeInUp">
            <div class="row">
                <div class="col s12 m8 offset-m2 l8 offset-l2">
                    <div class="card">
                        <div class="card-content">
                            <br>
                            <br>
                            <%= form_for(@message,url:{ :controller => 'messages', :action => 'create' },html: {class: "container contact-form"}) do |f| %>
                              <div class="row">
                                <div class="field col s6">
                                  <%= f.label :first_name %>
                                  <%= f.text_field :first_name,class: "validate" %>
                                </div>
                                <div class="field col s6">
                                  <%= f.label :last_name %>
                                  <%= f.text_field :last_name,class: "validate" %>
                                </div>
                              </div>
                              <div class="row">
                                <div class="field col s12">
                                    <%= f.label :email %>
                                    <%= f.email_field :email,class: "validate" %>
                                </div>
                              </div>
                              <div class="row">
                                <div class="field col s12">
                                    <%= f.label :message %>
                                    <%= f.text_area :message,class: "materialize-textarea" %>
                                </div>
                              </div>

                              <div class="row">
                                <div class="field col s12 center">
                                  <%= f.submit "Send Message",class:"btn deep-purple" %>
                                </div>
                              </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
